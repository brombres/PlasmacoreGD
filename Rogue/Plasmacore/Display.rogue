module Plasmacore

class Display [singleton]
  PROPERTIES
    size      : XY

  METHODS
    method bounds->Box
      return Box( size )

    method center->RealXY
      return size / 2.0

    method is_tablet->Logical
      if ($target("iOS"))
        return (native("UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPad")->Logical)
      elseIf ($target("Android"))
        trace "TODO"
        return false
      else
        return false
      endIf
endClass
