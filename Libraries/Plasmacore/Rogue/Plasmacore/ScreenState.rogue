module Plasmacore

uses Control/State

class ScreenState : State<<ScreenState>> [singleton]
  METHODS
    method on_draw
      noAction

    # Primary overrideable methods:
    # method on_start
    # method on_finish
    # method on_update

    method update
      ScreenState = this.updated

    method updated->ScreenState [override]
      local result = prior.updated
      if (not result) result = ScreenState()
      return result
endClass
